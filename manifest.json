{
    "manifest_version": 2,
    "name": "Amzn-izer",
    "version": "0.1",

    "description": "Get the short version of an amazon link.",

    "icons": {
        "48": "icons/squish-a-48.png",
        "96": "icons/squish-a-96.png"
    },

    "permissions": [
        "tabs",
        "clipboardWrite"
    ],

    "browser_action": {
        "default_icon": "icons/squish-a-48.png",
        "default_title": "Amzn short link",
        "default_popup": "popup/short_link.html"
    }

}
