{
    "manifest_version": 2,
    "name": "Amazon Link Shortener",
    "version": "1.0",

    "description": "Get the short version of an amazon.com link.",

    "icons": {
        "48": "icons/squish-a-48.png",
        "96": "icons/squish-a-96.png"
    },

    "permissions": [
        "tabs",
        "clipboardWrite"
    ],

    "browser_action": {
        "default_icon": "icons/squish-a-48.png",
        "default_title": "Amazon Short Link",
        "default_popup": "popup/short_link.html"
    }

}
